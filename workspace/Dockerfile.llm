FROM nvidia/cuda:11.7.1-cudnn8-runtime-ubuntu20.04

# Installer Python, pip et autres dÃ©pendances
RUN apt-get update && apt-get install -y \
    python3.10 python3-pip git curl wget libgl1-mesa-glx libglib2.0-0 \
 && rm -rf /var/lib/apt/lists/*

# Lier python3 -> python
RUN ln -s /usr/bin/python3.10 /usr/bin/python && ln -s /usr/bin/pip3 /usr/bin/pip

# Installer PyTorch + Transformers
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu117 \
 && pip install transformers accelerate timm sentencepiece einops \
 && pip install git+https://github.com/deepseek-ai/deepseek-vl.git

WORKDIR /workspace
